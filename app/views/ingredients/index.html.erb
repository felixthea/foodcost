<h1>Add New Ingredient</h1>
<form action="<%=ingredients_url %>" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"
	<label for="ingredient_name">Ingredient</label>
	<input type="text" id="ingredient_name" name="ingredient[name]">
	<br>
	<label for="ingredient_amount">Amount (grams)</label>
	<input type="number" id="ingredient_amount" name="ingredient[amount]">
	<br>
	<label for="ingredient_cost">Cost</label>
	<input type="number" id="ingredient_cost" name="ingredient[cost]">
	<br>
	<input type="submit" value="Add Ingredient">
</form>

<h1>Ingredients</h1>
<ul>
	<% @ingredients.each do |ingredient| %>
		<li>
			<ul>
				<li>Ingredient: <%= ingredient.name %></li>
				<li>Cost: <%= ingredient.cost %></li>
				<li>Amount: <%= ingredient.amount %></li>
				<li>Cost per Gram: $<%= (ingredient.cost * 1.0) / ingredient.amount %></li>
				<li><%= button_to "Delete Ingredient", ingredient_url(ingredient.id), method: :delete %>
			</ul>
		</li>
	<% end %>
</ul>